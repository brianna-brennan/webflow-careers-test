---
import Layout from '../layouts/Layout.astro';
import { ThemeToggle } from '../components/ThemeToggle';
---

<Layout title="Theme Demo - Careers">
  <main class="min-h-screen bg-base-100 text-base-content">
    <div class="container mx-auto px-4 py-8 max-w-4xl">
      <!-- Header with Theme Toggle -->
      <div class="flex items-center justify-between mb-8">
        <h1 class="text-3xl font-bold">Theme Demo</h1>
        <ThemeToggle client:load />
      </div>

      <!-- Theme Showcase Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <!-- Primary Card -->
        <div class="card bg-primary text-primary-content shadow-xl">
          <div class="card-body">
            <h2 class="card-title">Primary Theme</h2>
            <p>This card uses the primary color scheme.</p>
            <div class="card-actions justify-end">
              <button class="btn btn-primary-content">Action</button>
            </div>
          </div>
        </div>

        <!-- Secondary Card -->
        <div class="card bg-secondary text-secondary-content shadow-xl">
          <div class="card-body">
            <h2 class="card-title">Secondary Theme</h2>
            <p>This card uses the secondary color scheme.</p>
            <div class="card-actions justify-end">
              <button class="btn btn-secondary-content">Action</button>
            </div>
          </div>
        </div>

        <!-- Accent Card -->
        <div class="card bg-accent text-accent-content shadow-xl">
          <div class="card-body">
            <h2 class="card-title">Accent Theme</h2>
            <p>This card uses the accent color scheme.</p>
            <div class="card-actions justify-end">
              <button class="btn btn-accent-content">Action</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Base Theme Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <!-- Base-100 Card -->
        <div class="card bg-base-100 border border-base-300 shadow-xl">
          <div class="card-body">
            <h2 class="card-title text-base-content">Base-100 Card</h2>
            <p class="text-base-content/70">This card uses the base-100 background with proper text contrast.</p>
            <div class="card-actions justify-end">
              <button class="btn btn-primary">Primary Button</button>
              <button class="btn btn-outline">Outline Button</button>
            </div>
          </div>
        </div>

        <!-- Base-200 Card -->
        <div class="card bg-base-200 border border-base-300 shadow-xl">
          <div class="card-body">
            <h2 class="card-title text-base-content">Base-200 Card</h2>
            <p class="text-base-content/70">This card uses the base-200 background for subtle contrast.</p>
            <div class="card-actions justify-end">
              <button class="btn btn-secondary">Secondary Button</button>
              <button class="btn btn-ghost">Ghost Button</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Status Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <div class="alert alert-info">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Info alert</span>
        </div>

        <div class="alert alert-success">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Success alert</span>
        </div>

        <div class="alert alert-warning">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          <span>Warning alert</span>
        </div>

        <div class="alert alert-error">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Error alert</span>
        </div>
      </div>

      <!-- Form Elements -->
      <div class="card bg-base-100 border border-base-300 shadow-xl">
        <div class="card-body">
          <h2 class="card-title text-base-content mb-4">Form Elements</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="form-control">
              <label class="label">
                <span class="label-text text-base-content">Input Field</span>
              </label>
              <input type="text" placeholder="Type here" class="input input-bordered w-full" />
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text text-base-content">Select</span>
              </label>
              <select class="select select-bordered w-full">
                <option disabled selected>Pick one</option>
                <option>Option 1</option>
                <option>Option 2</option>
              </select>
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text text-base-content">Textarea</span>
              </label>
              <textarea class="textarea textarea-bordered w-full" placeholder="Bio"></textarea>
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text text-base-content">Checkbox</span>
              </label>
              <div class="flex items-center gap-2">
                <input type="checkbox" class="checkbox" />
                <span class="text-base-content">Remember me</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
